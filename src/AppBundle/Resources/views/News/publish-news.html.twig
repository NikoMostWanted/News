{% extends 'base.html.twig' %}
{% block title %}{% trans %}Public news{% endtrans %}{% endblock %}
{% block navbar %}<li><p class="navbar-btn"><a class="btn btn-primary" href="{{ url('Show') }}">{% trans %}Show news{% endtrans %}</a></p></li>{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3"></div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                {% form_theme form 'bootstrap_3_layout.html.twig' %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_widget(form.title, { 'attr': {
                    'placeholder': 'Title'|trans} }) }}
                {{ form_widget(form.text, { 'attr': {
                    'placeholder': 'Text'|trans} }) }}
                {{ form_widget(form.publish, { 'attr': {
                    'placeholder': 'Publish'|trans} }) }}
                {{ form_end(form) }}
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3"></div>
        </div>
    </div>
{% endblock %}